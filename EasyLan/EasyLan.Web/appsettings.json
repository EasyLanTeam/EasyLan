{
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "ConnectionStrings": {
    "DefaultConnection": "Host=172.16.100.165;Port=5434;Username=postgres;Password=1;Database=Ez;"
  },

  "AllowedHosts": "*",

  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "${specialfolder:folder=MyDocuments}/easylan/logs/plain-log-${shortdate}.log"
      },
      "logconsole": {
        "type": "ColoredConsole",
        "layout": "${uppercase:${level}}: ${logger}[${event-properties:item=EventId_Id:whenEmpty=0}]${newline}      ${message}",
        "rowHighlightingRules": [
          {
            "condition": "level == LogLevel.Error",
            "foregroundColor": "Red"
          },
          {
            "condition": "level == LogLevel.Fatal",
            "foregroundColor": "Red",
            "backgroundColor": "White"
          }
        ]
      },
      "jsonlogfile": {
        "type": "File",
        "fileName": "${specialfolder:folder=MyDocuments}/easylan/logs/log-${shortdate}.json",
        "layout": {
          "type": "JsonLayout",
          "Attributes": [
            {
              "name": "timestamp",
              "layout": "${date:format=o}"
            },
            {
              "name": "level",
              "layout": "${level}"
            },
            {
              "name": "logger",
              "layout": "${logger}"
            },
            {
              "name": "message",
              "layout": "${message:raw=true}"
            },
            {
              "name": "properties",
              "encode": false,
              "layout": {
                "type": "JsonLayout",
                "includeallproperties": "true"
              }
            }
          ]
        }
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "logfile, jsonlogfile"
      }
    ]
  }
}
